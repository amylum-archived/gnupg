name 'gnupg'
org 'amylum'

deps(
  'libgpg-error': '1.27-1',
  libassuan: '2.4.3-12',
  libgcrypt: '1.7.7-1',
  libksba: '1.3.5-11',
  npth: '1.5-1',
  gnutls: '3.5.13-1',
  gmp: '6.1.2-1',
  nettle: '3.3-6',
  libtasn1: '4.12-1',
  'p11-kit': '0.23.2-7',
  zlib: '1.2.11-1',
  sqlite: '3.19.3-1',
  libunistring: '0.9.7-1',
  libidn: '1.33-2'
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  libexecdir: '/usr/lib/gnupg',
  'enable-maintainer-mode': nil,
  host: 'x86_64-unknown-linux-gnu',
)

cflags
libs %w(tasn1 hogweed nettle p11-kit z gmp idn unistring)
harden

licenses 'COPYING.LIB'

patch 'cflags.patch'

build do
  run 'sed -i "s/beta=yes/beta=no/" autogen.sh'
  run './autogen.sh'
  run 'autoconf'
  configure
  make
  install
  run "ln -s gpg2 #{releasedir}/usr/bin/gpg"
end

test do
  run 'gpg --version'
end
